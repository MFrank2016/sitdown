{
  "include": ["src", "types", "test"],
  "exclude": [
    "node_modules",
    "dist",
    "src/lib"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*", "node_modules/*","lib/*"],
      "@type/*": ["src/types/*"]
    },
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": false
  }
}
