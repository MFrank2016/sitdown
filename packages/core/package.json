{
  "name": "sitdown",
  "version": "1.0.0",
  "description": "> TODO: description",
  "author": "LinFeng1997 <244732635@qq.com>",
  "module": "dist/.esm.js",
  "homepage": "https://github.com/mdnice/sitdown#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mdnice/sitdown.git"
  },
  "scripts": {
    "start": "tsdx watch --name src",
    "build": "tsdx build --name src && copyfiles -u 1 'src/**/*.d.ts' dist",
    "test": "tsdx test",
    "test:debug": "node --inspect node_modules/.bin/tsdx test --runInBand",
    "lint": "tsdx lint --fix",
    "patch": "npm run build && npm version patch && npm publish",
    "minor": "npm run build && npm version minor && npm publish",
    "major": "npm run build && npm version major && npm publish"
  },
  "bugs": {
    "url": "https://github.com/mdnice/sitdown/issues"
  },
  "devDependencies": {
    "copyfiles": "^2.2.0"
  }
}
